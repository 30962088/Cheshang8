<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="#02bbfb" >

        <ImageView
            android:id="@+id/nav_left_btn"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_nav_left" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="用户注册"
            android:textColor="#fff"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_radius_gray"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="11.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="9dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_username" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="手机/用户名"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#898989"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/shape_radius_gray"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="11.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="9dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_password" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="密码（由6-16位字母数字下划线组合）"
                android:password="true"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#898989"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@drawable/shape_radius_gray"
                android:gravity="center_vertical" >

                <ImageView
                    android:layout_width="11.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="9dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_code" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="手机验证码"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="#898989"
                    android:textSize="14sp" />
            </LinearLayout>
            
            <TextView 
                android:layout_width="107dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_radius_gray"
                android:text="获取验证码"
                android:textColor="#4c4948"
                android:textSize="14sp"
                android:gravity="center"/>
            
        </LinearLayout>
        
        <TextView 
            android:layout_marginTop="55dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_radius_red"
            android:textColor="#fff"
            android:textSize="15sp"
            android:gravity="center"
            android:text="提交"/>
        
    </LinearLayout>

</LinearLayout>