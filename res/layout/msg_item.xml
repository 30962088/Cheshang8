<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="109dp" 
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="6.5dp"
                android:layout_marginRight="11.5dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ii_a7_selector"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="北京新一轮尾号限行轮换下周开始"
                android:textColor="#ff0000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:ellipsize="end"
                android:gravity="left"
                android:lines="2"
                android:text="北京新一轮尾号限行轮换7月14日（下周一）开始，周一至周五分别北京新一轮尾号限行轮换7月14日（下周一）开始，周一至周五分别"
                android:textColor="#898989"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/from"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="来自  会养车"
                    android:textColor="#aaabab"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2014-07-11"
                    android:textColor="#aaabab"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/icon_arrow_3" />
    </RelativeLayout>

</FrameLayout>