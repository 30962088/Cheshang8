<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <FrameLayout 
        android:id="@+id/slider_container"
        android:layout_width="match_parent"
        android:layout_height="118dp"></FrameLayout>
    
    <com.cheshang8.app.widget.MyGridView 
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="4"
        android:horizontalSpacing="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:scrollbars="none"
        android:verticalSpacing="5dp"
        android:listSelector="#00000000"
        android:layout_marginTop="5dp"
        android:gravity="center"></com.cheshang8.app.widget.MyGridView>
    
    <com.cheshang8.app.widget.MyGridView 
        android:id="@+id/adgrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
        android:layout_marginTop="5dp"
        android:horizontalSpacing="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:verticalSpacing="5dp"
        android:layout_marginBottom="5dp"
        android:listSelector="#00000000"
        android:gravity="center"></com.cheshang8.app.widget.MyGridView>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        
        <View 
            android:layout_width="1px"
            android:layout_height="17dp"
            android:background="#02bbfb"/>
        
        <TextView 
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="养车聚惠"
            android:textColor="#4c4948"
            android:textSize="15sp"/>
        
    </LinearLayout>
    
</LinearLayout>
